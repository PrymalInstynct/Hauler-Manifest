{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "description": "Group all Hauler manifest updates",
      "matchManagers": [
        "custom.regex"
      ],
      "groupName": "hauler-manifest-updates"
    },
    {
      "description": "Automerge non-major updates for Hauler assets",
      "matchManagers": [
        "custom.regex"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update Docker images in Hauler manifests",
      "managerFilePatterns": [
        "/(^|/)test-hauler-manifest\\.ya?ml$/"
      ],
      "matchStrings": [
        "datasource=(?<datasource>docker)\\s*\\n\\s*-\\s+name:\\s+(?<depName>.*?):(?<currentValue>.*)"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "description": "Update Helm charts in Hauler manifests",
      "managerFilePatterns": [
        "/(^|/)test-hauler-manifest\\.ya?ml$/"
      ],
      "matchStrings": [
        "datasource=(?<datasource>helm)\\s*depName=(?<depName>.*?)\\s*registryUrl=(?<registryUrl>.*?)\\s*-\\s+name:.*\\s+repoURL:.*\\s+version:\\s*(?<currentValue>.*)"
      ],
      "datasourceTemplate": "helm"
    }
  ]
}
