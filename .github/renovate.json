{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "description": "Group all Hauler manifest updates",
      "matchManagers": [
        "custom.regex"
      ],
      "groupName": "hauler-manifest-updates"
    },
    {
      "description": "Automerge non-major updates for Hauler assets",
      "matchManagers": [
        "custom.regex"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update Docker images in Hauler manifests",
      "managerFilePatterns": [
        "test-hauler-manifest.yaml"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>docker)[\\s\\S]*?-\\s*name:\\s*(?<depName>.*?):(?<currentValue>\\S+)"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "description": "Update Helm charts in Hauler manifests",
      "managerFilePatterns": [
        "test-hauler-manifest.yaml"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>helm)\\s*depName=(?<depName>\\S+)\\s*registryUrl=(?<registryUrl>\\S+)[\\s\\S]*?version:\\s*(?<currentValue>\\S+)"
      ],
      "datasourceTemplate": "helm",
      "registryUrlTemplate": "{{{registryUrl}}}"
    },
    {
      "customType": "regex",
      "description": "Update Cribl TGZ files in Hauler manifests",
      "managerFilePatterns": [
        "test-hauler-manifest.yaml"
      ],
      "matchStrings": [
        "(path:\\s*https://cdn\\.cribl\\.io)(?<currentValue>.*)"
      ],
      "datasourceTemplate": "url",
      "depNameTemplate": "https://docs.cribl.io/stream/release-notes",
      "versioningTemplate": "regex:^/dl/(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)/cribl-\\d+\\.\\d+\\.\\d+-(?<digest>[a-f0-9]+)-linux-x64\\.tgz$",
      "replaceStringTemplate": "{{{depName}}}{{{newValue}}}"
    }
  ]
}
