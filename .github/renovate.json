{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "description": "Group all Hauler manifest updates",
      "matchManagers": [
        "custom.regex"
      ],
      "groupName": "hauler-manifest-updates"
    },
    {
      "description": "Automerge non-major updates for Hauler assets",
      "matchManagers": [
        "custom.regex"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "description": "Handle Cribl TGZ hash update",
      "matchDepNames": [
        "criblio/helm-charts"
      ],
      "postUpgradeTasks": {
        "commands": [
          "sed -i -E 's/cribl-([0-9]+\\.[0-9]+\\.[0-9]+)-[a-f0-9]+-linux-x64\\.tgz/cribl-\\1-MANUAL-HASH-UPDATE-NEEDED-linux-x64.tgz/g' {{{parentDir}}}/test-hauler-manifest.yaml"
        ],
        "fileFilters": [
          "**/*"
        ],
        "executionMode": "branch"
      }
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update Docker images in Hauler manifests",
      "managerFilePatterns": [
        "test-hauler-manifest.yaml"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>docker)[\\s\\S]*?-\\s*name:\\s*(?<depName>.*?):(?<currentValue>\\S+)"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "description": "Update Helm charts in Hauler manifests",
      "managerFilePatterns": [
        "test-hauler-manifest.yaml"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>helm)\\s*depName=(?<depName>\\S+)\\s*registryUrl=(?<registryUrl>\\S+)[\\s\\S]*?version:\\s*(?<currentValue>\\S+)"
      ],
      "datasourceTemplate": "helm"
    },
    {
      "customType": "regex",
      "description": "Update Cribl files in Hauler manifests",
      "managerFilePatterns": [
        "test-hauler-manifest.yaml"
      ],
      "matchStrings": [
        "path:\\s*https://cdn\\.cribl\\.io/dl/(?<currentValue>\\d+\\.\\d+\\.\\d+)/cribl-.*?-linux-x64\\.tgz"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "criblio/helm-charts"
    }
  ]
}