{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "description": "Group all Hauler manifest updates",
      "matchManagers": [
        "custom.regex"
      ],
      "groupName": "hauler-manifest-updates"
    },
    {
      "description": "Automerge non-major updates for Hauler assets",
      "matchManagers": [
        "custom.regex"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update Docker images in Hauler manifests",
      "managerFilePatterns": [
        "(^|/).*hauler-manifest\\.ya?ml$"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s+datasource=(?<datasource>docker)\\s*\\n\\s*-\\s+name:\\s*['\"]?(?<depName>[\\w.\\-/]+):(?<currentValue>[\\w.\\-]+)['\"]?"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    },
    {
      "customType": "regex",
      "description": "Update Helm charts in Hauler manifests",
      "managerFilePatterns": [
        "(^|/).*hauler-manifest\\.ya?ml$"
      ],
      "matchStrings": [
        "?(?<currentValue>v?[\\d.]+(:?-[^'\"]+)?)['\"]?"
      ],
      "versioningTemplate": "semver"
    }
  ]
}
