{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "description": "Group all Hauler manifest updates",
      "matchManagers": ["regex"],
      "groupName": "hauler-manifest-updates"
    },
    {
      "description": "Automerge non-major updates for Hauler assets",
      "matchManagers": ["regex"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update Docker images in Hauler manifests",
      "fileMatch": [
        "(^|\\n)kind:\\s+Images\\n"
      ],
      "managerFilePatterns": [
        "(^|/).*hauler-manifest\\.ya?ml$"
      ],
      "matchStrings": [
        "-\\s+name:\\s*['\"]?(?<depName>[\\w.\\-/]+):(?<currentValue>[\\w.\\-]+)['\"]?"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    },
    {
      "customType": "regex",
      "description": "Update Helm charts in Hauler manifests",
      "fileMatch": [
        "(^|\\n)kind:\\s+Charts\\n"
      ],
      "managerFilePatterns": [
        "(^|/)hauler-manifest\\.ya?ml$"
      ],
      "matchStrings": [
        "-\\s+name:\\s*['\"]?(?<depName>[\\w.\\-]+)['\"]?\\s*\\n\\s*repoURL:\\s*(?<registryUrl>https?://[^\\s]+)\\s*\\n\\s*version:\\s*['\"]?(?<currentValue>v?[\\d.]+(:?-[\\w.\\-]+)?)['\"]?"
      ],
      "datasourceTemplate": "helm",
      "versioningTemplate": "semver"
    }
  ]
}