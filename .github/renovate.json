{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "description": "Group all Hauler manifest updates",
      "matchManagers": [
        "custom.regex"
      ],
      "groupName": "hauler-manifest-updates"
    },
    {
      "description": "Automerge non-major updates for Hauler assets",
      "matchManagers": [
        "custom.regex"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update Docker images in Hauler manifests",
      "managerFilePatterns": [
        ".*-?hauler-manifest\\.ya?ml$"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>docker)\\s*\\n\\s*-\\s+name:\\s+(?<depName>.*?):(?<currentValue>.*)"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "description": "Update Helm charts in Hauler manifests",
      "managerFilePatterns": [
        ".*-?hauler-manifest\\.ya?ml$"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>helm)\\s*depName=(?<depName>.*?)\\s*registryUrl=(?<registryUrl>.*?)[\\s\\S]*?version:\\s*(?<currentValue>.*)"
      ],
      "datasourceTemplate": "helm"
    },
    {
      "customType": "regex",
      "description": "Update Cribl files in Hauler manifests",
      "managerFilePatterns": [
        ".*-?hauler-manifest\\.ya?ml$"
      ],
      "matchStrings": [
        "path:\\s+https://cdn\\.cribl\\.io/dl/(?<currentValue>.*?)/cribl-.*?\\.tgz"
      ],
      "datasourceTemplate": "custom.cribl-releases",
      "depNameTemplate": "cribl",
      "extractVersionTemplate": "^v?(?<version>\\d+\\.\\d+\\.\\d+)$"
    }
  ],
  "customDatasources": {
    "cribl-releases": {
      "format": "html",
      "defaultRegistryUrlTemplate": "https://docs.cribl.io/stream/release-notes"
    }
  }
}